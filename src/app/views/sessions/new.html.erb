<%= form_with url: login_path, scope: :session, local: true, class:"form-signin" do |f| %>
  <h2 class="form-signin-heading">TimuTasu</h2>
  <p class="form-signin-heading">Team De Task Kanri</p>
  <%= f.label :email, User.human_attribute_name(:email), class:"sr-only"%>
  <%= f.email_field :email, class: 'form-control',placeholder:User.human_attribute_name(:email) %>

  <%= f.label :password, User.human_attribute_name(:password), class:"sr-only" %>
  <%= f.password_field :password, class: 'form-control',placeholder:User.human_attribute_name(:password) %>

  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>ログイン状態を保存する</span>
  <% end %>

  <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
  <p><%= link_to "サインアップ", signup_path %></p>
<% end %>
