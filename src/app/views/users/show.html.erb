<% provide(:title, @user.name) %>
<div>
  <h2><%= @user.name %></h2>
  <span><%= link_to 'プロフィール編集', edit_user_path(@user) %></span>
  <span><%= link_to 'ログアウト',logout_path, method: :delete %></span>
  <%= link_to '新しいグループを作る', new_group_path,class:"btn btn-primary" %>
</div>

<% if has_group?(@user) %>
  <div class="group">
    <h2>所属グループ</h2>
  </div>

  <table class="table">
    <tbody>
      <%= render @groups %>
    </tbody>
  </table>
<% end %>
