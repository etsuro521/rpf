<% provide(:title, "Monthly Goals") %>
<div class="m-goals">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <div class="navbar-header navbar-brand"><%= link_to stored_team.name, goals_path if !my_task?() %></div>
                <% if !my_task?() %>
                    <div class="navbar-header navbar-brand"><%= "#{stored_date.year}/#{stored_date.month}" %></div>
                <% else %>
                    <div class="navbar-header navbar-brand"><%= link_to "#{stored_date.year}/#{stored_date.month}", goals_path %></div>
                <% end %>
            </div>
            
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><%= link_to "Add Goal", new_monthly_goal_path %></li>
                </ul>
            </div>
        </div>

    </nav> 

    <% @goals.each do |goal| %>
        <table class="table table-bordered">
            <tbody>
                    <tr>
                        <td>
                            <label>Plan</label>
                            <p><%= goal.plan %></p>
                        </td>
                        <td>
                            <label>Output</label>
                            <%= link_to "Edit", edit_monthly_goal_path(goal), class:'edit-link' %>
                            <p><%= goal.output %></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Action</label>
                            <p><%= goal.action %></p>
                        </td>
                        <td>
                            <label>Review</label>
                            <p><%= goal.review %></p>
                        </td>
                    </tr>
            </tbody>
        </table>
    <% end %>
</div>
