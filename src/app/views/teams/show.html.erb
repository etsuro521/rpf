<% provide(:title, @team.name) %>
<%= render 'shared/tab' %>
<div class="team-detail">
    <div class="row">
        <div class="col-md-7 col-md-offset-3 woocommerce">
            <%= render 'shared/t_tab' %>
            <table class="table">
                <tbody>
                    <% @members.each do |member| %>
                        <tr>
                            <th scope="row"><%= member.name %></th> 
                            <td>
                                <%= form_with(model: member.user_teams.find_by(team_id:@team.id),html: { method: :delete }, local: true) do |f| %>
                                    <%= f.submit "Remove", class: "btn btn-default",data: { confirm: "Remove #{member.name} ?" } %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
