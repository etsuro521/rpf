<%= render 'shared/tab' %>

<div class="row home">
    <div class="col-md-4">
        <p class="title late-title">未着手( <%= @tasks.where(status:'未着手').count%> )</p>
        <div class="scroll-list jscroll scroll-bar">
            <%= render @tasks.where(status:'未着手') %>
        </div>
    </div>
    <div class="col-md-4">
        <p class="title warn-title">対応中( <%= @tasks.where(status:'対応中').count%> )</p>
        <div class="scroll-list jscroll scroll-bar">
            <%= render @tasks.where(status:'対応中') %>
        </div>
    </div>
    
    <div class="col-md-4">
        <p class="title finish-title">完了( <%= @tasks.where(status:'完了').count%> )</p>
        <div class="scroll-list jscroll scroll-bar">
            <%= render @tasks.where(status:'完了') %>
        </div>
    </div>
</div>



