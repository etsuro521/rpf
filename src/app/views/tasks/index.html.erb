<% provide(:title, 'All tasks') %>
<%= render 'shared/tab' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Task</th>
      <% if cookies.permanent.signed[:change] == "0" && !my_task?() %>
        <th scope="col">From</th>
        <th scope="col">To</th>
      <% end %>
      <th scope="col">優先順位</th>
      <th scope="col">ステータス</th>
      <th scope="col">Deadline</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr class=<%= progress task %>>
        <th scope="row"><%= link_to task.title, edit_task_path(task) %></th>
        <% if cookies.permanent.signed[:change] == "0" && !my_task?() %>
          <td><%= link_to from(task), edit_task_path(task) %></td>
          <td><%= link_to to(task), edit_task_path(task) %></td>
        <% end %>
        <td><%= link_to task.urgency_importance, edit_task_path(task) %></td>
        <td><%= link_to task.status, edit_task_path(task) %></td>
        <td><%= link_to task.deadline, edit_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="origin-pagenate">
  <%= will_paginate @tasks,previous_label: '&laquo;', next_label: '&raquo;',inner_window: 1, outer_window: 0 %> 
</div>
